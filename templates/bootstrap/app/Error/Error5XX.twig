{% extends '@common/Content/Page.twig' %}

{% block content %}

    <div class="row p-4 pb-0 pe-lg-0 pt-lg-5 align-items-center rounded-3 border shadow-lg">
        <div class="col-lg-8 p-3 p-lg-5 pt-lg-3">
            <h1 class="display-4 fw-bold lh-1">Masterplan Tycoon Calculator</h1>
            <h3>{{ code }}</h3>
            <p class="lead">{{ exception.getMessage() }}</p>
            <p class="buttons">
                <a href="{{ path('home') }}" class="btn btn-outline-secondary"><i class="bi bi-house"></i> Go to Homepage</a>
            </p>
        </div>
        <div class="col-lg-3 offset-lg-1 overflow-hidden" style="font-size: 10em">
            <i class="bi bi-map-fill"></i>
        </div>
    </div>

    {% if isDebug %}
        <h3>Details</h3>
        <p>{{ exception.getMessage() }}</p>

        <pre class="text-dark">{{ exception.getTraceAsString() }}</pre>
    {% endif %}

{% endblock %}
